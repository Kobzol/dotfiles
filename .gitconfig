[credential]
        helper = store
[pull]
        ff = only
[commit]
        gpgsign = true
[alias]
        uncommit = reset --soft HEAD^1
[alias]
        squash = "!f() { git reset --soft \"$(git merge-base HEAD master)\"; }; f"
[alias]
	co = checkout
[alias]
        repush = "!f() { git add -u && git commit --amend --no-edit && git push --force-with-lease; }; f"
[rerere]
        enabled = true
[rebase]
        autosquash = true
[help]
	autocorrect = prompt
[push]
	autoSetupRemote = true
